<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="80.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EditTaskWindowController">
   <children>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="1000.0" spacing="10.0" AnchorPane.topAnchor="30.0">
         <children>
            <DatePicker fx:id="editTaskDate" promptText="select date">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </DatePicker>
            <ChoiceBox fx:id="editTaskStatus" prefWidth="150.0" />
            <ChoiceBox fx:id="editTaskPriority" prefWidth="150.0" />
            <TextField fx:id="editTaskDescription" prefWidth="350.0" promptText="task description" />
            <Button fx:id="editTaskButton" mnemonicParsing="false" onAction="#clickAtEditTaskButton" prefHeight="25.0" prefWidth="39.0" text="Edit">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</AnchorPane>
